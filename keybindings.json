// Place your key bindings in this file to override the defaults
[
    // =====================
    // NAVIGATION 
    // =====================
        // Windows (Editor)
    {
        "key": "ctrl+w h",
        "command": "workbench.action.focusPreviousGroup",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+w l",
        "command": "workbench.action.focusNextGroup",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.action.focusAboveGroup",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+w j",
        "command": "workbench.action.focusBelowGroup",
        "when": "!terminalFocus"
    },
        // Windows (Terminal)
    {
        "key": "ctrl+w h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+w l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+w j",
        "command": "workbench.action.terminal.focus",
        "when": "terminalIsOpen"
    },

    // =====================
    // EDITOR
    // =====================
        // Peek Definition
    {
        "key": "ctrl+shift+k",
        "command": "editor.action.peekDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor"
    },
    {
        "key": "ctrl+k",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateBack"
    },
        // Tabs
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousEditor",
        "when": "vim.mode != 'Insert' && editorTextFocus" 
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextEditor",
        "when": "vim.mode != 'Insert' && editorTextFocus"
    },
    {
        "key": "ctrl+w x",
        "command": "workbench.action.closeEditorsInGroup",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+shift+x",
        "command": "workbench.action.closeActivePinnedEditor",
        "when": "vim.mode != 'Insert' && editorTextFocus && activeEditorIsPinned"

    },
    {
        "key": "ctrl+shift+x",
        "command": "workbench.action.closeActiveEditor",
        "when": "vim.mode != 'Insert' && editorTextFocus && !activeEditorIsPinned"

    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.unpinEditor",
        "when": "vim.mode != 'Insert' && editorTextFocus && activeEditorIsPinned"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.pinEditor",
        "when": "vim.mode != 'Insert' && editorTextFocus && !activeEditorIsPinned"
    },

    // =====================
    // TERMINAL
    // =====================
    {
        "key": "ctrl+\\",
        "command": "workbench.action.terminal.split",
        "when": "terminalIsOpen && terminalFocus"
    },
    {
        "key": "ctrl+shift+x",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+1",
        "command": "workbench.action.terminal.focusAtIndex1"
    },
    {
        "key": "ctrl+2",
        "command": "workbench.action.terminal.focusAtIndex2"
    },
    {
        "key": "ctrl+3",
        "command": "workbench.action.terminal.focusAtIndex3"
    },
    {
        "key": "ctrl+4",
        "command": "workbench.action.terminal.focusAtIndex3"
    },


    // ============= OTHER ================
    {
        "key": "ctrl+shift+w",
        "command": "-workbench.action.closeWindow"
    },
    {
        "key": "ctrl+0",
        "command": "workbench.action.toggleZenMode"
    },
    {
        "key": "ctrl+b",
        "command": "workbench.action.toggleSidebarVisibility"
    }
]

